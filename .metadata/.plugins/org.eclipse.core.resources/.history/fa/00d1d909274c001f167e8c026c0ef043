package day4;

public class Actionitem_2 {
	
	public static void main(String[]args) {
		
		
		System.out.println("Factorial is: "+doFactorial(5));
		
		
	}
	public static int doFactorial(int number) {
		
		//declare a new int type variable
		int factorial =1 ;
		while(number >1) {
			factorial *=number;
			number --;
		}
		return factorial ;
		
		
		
		
	}
	
	
	
	

}
